#!/bin/bash
#
# clean up temp dyna-related runtime files
#
# Mark Palmeri (mark.palmeri@duke.edu)
# 2008-01-19 (19:45)

echo "Deleting the following ls-dyna temporary run files . . .";

# files to remove (at least their prefixes)
hitlist=(d3dump d3thdt d3full d3hsp disk8 messag00 scr adp bg_switch); 

for file in ${hitlist[*]}
do
rm -v $file*
done
